<tr id= <%= "task-#{task.id}" %> class=<%= class_completed(task.complete?) %> >
  <td class="state-cell">
    <%= link_to_change_complete(task.complete?, [:mark, project, activity, task]) %>
  </td>
  <td class="name-cell">
    <%= task.description %>
    <%= link_to_delete_task([project, activity, task]) %>
  </td>
</tr>