<tr id= <%= "task-#{task.id}" %> class=<%= class_completed(task.complete?) %> >
  <td class="id-cell"><%= task.id %></td>
  <td class="state-cell">
    <%= link_to_change_complete(task.complete?, [:mark, task.activity.project, task.activity, task]) %>
  </td>
  <td class="name-cell" colspan="2">
    <%= task.description %>
    <%= link_to_delete_task([task.activity.project, task.activity, task]) %>
  </td>
</tr>