<%= form_for [@project, @activity, @image] do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image_file %>
    <%= f.file_field :image_file %>
    <p class="help-block">Seleccione el Archivo que desea subir.</p>
  </div>
  <%= submit_button  %>
  <%= button_form_to_back "Volver", [@project, @activity, :images] %>
<% end %>