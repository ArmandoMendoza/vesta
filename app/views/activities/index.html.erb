<%= table_panel("ACTIVIDADES DE #{@project.name}", (can?(:create, Activity)),
  button_options: { text: "Nueva Activadad", url: new_project_activity_path }) do %>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Fecha Inicio</th>
      <th>Fecha Final</th>
      <th>Tiempo de Ejecucion</th>
      <th>Estatus</th>
      <th colspan="2">Acciones</th>
    </tr>
  </thead>
  <tbody>
  <% @activities.each do |activity| %>
    <tr>
      <td><%= activity.name %></td>
      <td><%= activity.description %></td>
      <td><%= activity.init_date %></td>
      <td><%= activity.finish_date %></td>
      <td><%= activity.full_execution_time %></td>
      <td><%= activity.state %></td>
      <% if can? :read, activity %>
        <td><%= link_to_show "detalles", project_activity_path(@project, activity) %></td>
      <% end %>
      <% if can? :edit, activity %>
        <td><%= link_to_edit "editar", edit_project_activity_path(@project, activity) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
<% end %>
