<!-- FORM -->
<%= form_for Comment.new, url: [@project, @activity, :comments], html: { class: "form-inline" } do |f| %>
  <div class="form-group" style="width: 100%">
    <%= f.text_field :comment, class: "form-control", placeholder: "Agregar Comentario" %>
  </div>
<% end %>
<br>
<!-- TASK LIST -->
<% if @activity.comments.any? %>
  <table class="table-comments">
    <tbody>
      <% @activity.comments.includes(:user).each do |comment| %>
        <%= render partial: "shared/comment_cell", locals: { comment: comment } %>
      <% end %>
    </tbody>
  </table>
<% end %>