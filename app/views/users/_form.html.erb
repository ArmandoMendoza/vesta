<%= simple_form_for [@company, @user] do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :password, required: true %>
  <%= f.input :password_confirmation, required: true %>
  <% if current_user.admin? %>
    <%= f.input :user_type, collection: User::USER_TYPE, input_html: { class: "chosen",
      data: { placeholder: "Seleccione Tipo de Usuario"} }%>
  <% end %>
  <%= submit_button %>
  <%= button_form_to_back "Volver", [@company, :users] %>
<% end %>
