var tr = $('#task-<%= @task.id %>')
<% if @task.complete? %>
  tr.toggleClass('task-completed')
  tr.find('span').removeClass("glyphicon-unchecked").addClass("glyphicon-check")
<% else %>
  tr.removeClass('task-completed')
  tr.find('span').removeClass("glyphicon-check").addClass("glyphicon-unchecked")
<% end %>
