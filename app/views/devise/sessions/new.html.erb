<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <% if alert %>
    <p class="text-danger"><b><%= alert %></b></p>
  <% end %>
  <div class="input-group">
    <span class="input-group-addon"><span><%= image_tag("icon/login-user.png") %>  </span></span>
    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <br>
  <div class="input-group">
    <span class="input-group-addon"><span><%= image_tag("icon/login-key.png") %></span></span>
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <br>
  <div><%= f.submit "ENTRAR", class: "btn btn-vesta btn-sm col-md-12" %></div>
<% end %>
